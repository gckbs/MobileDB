            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아침"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:layout_gravity="fill_horizontal"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="월요일"/>
            <TextView
                android:id="@+id/textview1Breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"/>
            <TextView
                android:id="@+id/textview1Lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LUNCH"/>
            <TextView
                android:id="@+id/textview1Dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINNER"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="화요일"/>
            <TextView
                android:id="@+id/textview2Breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BREAKFAST"/>
            <TextView
                android:id="@+id/textview2Lunch"
