                android:layout_height="wrap_content"
                android:text="LUNCH"/>
            <TextView
                android:id="@+id/textview3Dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DINNER"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="목요일"/>

            <TextView
                android:id="@+id/textview4Breakfast"
